# Environment Configuration for WhatsApp Memory Vault Backend

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-12345678901234567890
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-09876543210987654321
ENCRYPTION_KEY=your-encryption-key-change-this-in-production-abcdefghijklmnopqrstuvwxyz123456

# Database
DATABASE_URL=sqlite:///./storage/whatsapp_vault.db

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./storage/uploads/

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/app.log

# Development Settings
DEV_MODE=true
DEV_RELOAD=true
